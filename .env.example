# ============================================
# CanxJS Environment Configuration
# ============================================
# Copy this file to .env and modify the values

# Application
NODE_ENV=development
APP_NAME=CanxJS App
APP_KEY=your-secret-key-change-this-in-production
APP_DEBUG=true
APP_URL=http://localhost:3000

# Server
PORT=3000
HOST=0.0.0.0

# ============================================
# Database - MySQL (Primary)
# ============================================
DB_DRIVER=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=canxjs_db
DB_USER=root
DB_PASS=

# Database Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE=30000
DB_LOGGING=true

# ============================================
# Database - PostgreSQL (Secondary)
# ============================================
# Uncomment to use PostgreSQL instead of MySQL
# DB_DRIVER=postgresql
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=canxjs_db
# DB_USER=postgres
# DB_PASS=

# ============================================
# Cache
# ============================================
CACHE_ENABLED=true
CACHE_TTL=300
CACHE_MAX_SIZE=10000

# ============================================
# HotWire (Real-time Streaming)
# ============================================
HOTWIRE_ENABLED=true
HOTWIRE_RECONNECT_INTERVAL=3000
HOTWIRE_MAX_CONNECTIONS=1000

# ============================================
# JIT Compiler
# ============================================
JIT_ENABLED=true
JIT_WARMUP_ON_START=true

# ============================================
# Security
# ============================================
CORS_ORIGIN=*
CORS_CREDENTIALS=false
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# ============================================
# SSL/TLS (Optional)
# ============================================
# SSL_ENABLED=false
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
# SSL_CA_PATH=/path/to/ca.pem

# ============================================
# Logging
# ============================================
LOG_LEVEL=debug
LOG_FORMAT=pretty

# ============================================
# Session (Optional)
# ============================================
# SESSION_SECRET=your-session-secret
# SESSION_MAX_AGE=86400000
